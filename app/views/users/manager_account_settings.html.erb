

<section role="main" class="page-wrapper">



<section id="dashboard">
 		 
    <h1> Account Settings</h1>			
			
		</section>


<% if params[:add] %>
<div class="alert alert-info">
You have successfully added a sales person
</div>
<% elsif params[:delete_location] %>
<div class="alert alert-info">
You have successfully deleted an office location
</div>
<% elsif params[:delete] %>
<div class="alert alert-info">
You have successfully deleted a sales person
</div>


<% elsif params[:location] %>
<div class="alert alert-info">
You have successfully added a location
</div>
<% end %>


<article class="content-box minimizer col-2 salesboard-stat-block">
			<header>
				<h2 style="padding-right: 90px; "> Salespeople Manager</h2>
            <a href="#" class="content-box-minimizer" title="Toggle Content Block" style="display: block; left: 126.01851844787598px; ">Toggle</a></header>

			<!-- User Profile - vCard -->
			<section id="hcard-Kevin-Glenn-Bates" style="display: block; ">

<h3>Current Salespeople</h3>

<ul class="tickets">


<% if (@salespeople) && (@salespeople.count > 0) %>
<% for people in @salespeople %>
<li class="ticket-data">	
								<!-- Ticket Overview -->
								<div class="ticket-overview">
									<ul style="
">

										<li class="ticket-data-ticket">
											<%= people.firstname %> <%= people.lastname %>
										</li>

										<li class="ticket-data-user">
											<%= people.company %> 
										</li>
										<form method="post" class="delete-form" action="/users/delete" >
										<li class="ticket-data-priority">
                                                                                        <input type="hidden" name="current_user_id" value="<%= current_user.id %>" />
											<input type="hidden" name="user_id" value="<%= people.id %>" />
											<span class="tag delete-trigger red">Delete</span>
										</li>
										</form>
									</ul>


								</div>
								<!-- /Ticket Overview -->
							</li>
<% end %>
<% end %>


<li class="ticket-data">
                                                                <!-- Ticket Overview -->
                                                                <div class="ticket-overview" style="display:none;">
                                                                        <ul style="
">
                                                                                <li class="ticket-data-ticket">
                                                                                        Jorge Soto
                                                                                </li>

                                                                                <li class="ticket-data-user">
                                                                                        Best Deals Ltd.
                                                                                </li>
                                                                                <li class="ticket-data-priority">
                                                                                        <span class="tag red">Delete</span>
                                                                                </li>
                                                                        </ul>
                                                                </div>
                                                                <!-- /Ticket Overview -->




<div class="ticket-details" style="display:block;">



									<h4> Add Salesperson</h4>

<form method="post" id="sales-manager" action="/users/add_salesperson" class="form-horizontal">

<% if current_user %>
<input type="hidden" value="<%= current_user.id %>" name="user_id" />
<% end %>

  <div class="control-group">
    <label class="control-label" for="inputPassword"> First Name</label>
    <div class="controls">
      <input type="text" id="inputPassword" name="user[firstname]" placeholder="First Name">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputassword"> Last Name</label>
    <div class="controls">
      <input type="text" id="inputassword" name="user[lastname]" placeholder="Last Name">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <input type="text" id="inputEmail" placeholder="Email" name="user[email]" >
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <a onclick="$('#sales-manager').submit()" class="btn-large btn btn-the-salmon-dance-3" style="font-size: 21px;"> Add Salesperson</a>
    </div>
  </div>
</form>



								</div>
                                                        </li>
</ul>
</section>
			
		</article>




